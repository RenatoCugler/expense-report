extends ../layouts/default

block main
  h1= title
  h3= description

block content
  - var action = '/expenses/'+ expense.id +'/receipts'
  - action += receipt.isNew? '' : '/' + receipt._id

  .row
    .col-md-4
      form(method="post", action=action, enctype="multipart/form-data", role="form")
        input(type='hidden', name='_csrf', value=csrf_token)

        - if (!receipt.isNew)
          input(type="hidden", name="_method", value="PUT")

        .form-group
          label(for='vendor') Vendor
          input#email.form-control(type='text', name='vendor' placeholder='I.e: Walmart', required)
        
        .form-group
          label(for='purchasedDate') Date on receipt
          input#email.form-control(type='date', placeholder='date' name='purchasedDate',required)

        .form-group
          label(for='itemsPurchased') Item(s) purchased
          textarea.form-control(type='text', rows="2", name="itemsPurchased", placeholder='',required)

        .form-group
          label(for='totalCost') Total cost ($)
          input#email.form-control(type='float', name='totalCost' placeholder='',required)
        
        .form-group
          label(for='event') Event
          input#email.form-control(type='text', name='event' placeholder='I.e: Pinewood Derby')

        button.btn.btn-primary(type='submit') Save
        | &nbsp;
        a.btn.btn-link(href='/expenses/'+ expense.id, title="cancel") Cancel  
