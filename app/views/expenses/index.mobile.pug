extends ../layouts/default

block main
  h1= title

block content
  - if (expenses.length)
    each expense, index in expenses
      div(class=`py-4 ${index && 'border-top'}`)
        include expense

    - if (pages > 1)
      ul.pagination
        != createPagination(pages, page, 'page-item', 'page-link')
  - else
    h4.text-muted No expenses.&nbsp;
      a(href="/expenses/new") create one renato
